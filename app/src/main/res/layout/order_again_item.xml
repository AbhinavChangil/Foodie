<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_order_again"
        android:layout_width="387dp"
        android:layout_height="87dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"
        app:cardElevation="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/img_order_again"
                android:layout_width="64dp"
                android:layout_height="64dp"
                tools:srcCompat="@tools:sample/avatars"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="10dp"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/tv_food_name_order_again"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food Name"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="17dp"
                app:layout_constraintLeft_toRightOf="@+id/img_order_again"
                app:layout_constraintTop_toTopOf="@id/img_order_again"
                app:layout_constraintBottom_toBottomOf="@+id/img_order_again"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/abhaya_libre"/>

            <TextView
                android:id="@+id/tv_food_price_order_again"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/abhaya_libre"
                android:text="Rs. 5"
                android:textColor="@color/dark_green_logo"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tv_food_name_order_again"
                app:layout_constraintTop_toBottomOf="@+id/tv_food_name_order_again" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginEnd="32dp"
                android:text="Order Again"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@drawable/addtocartshape"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>