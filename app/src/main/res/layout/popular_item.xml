<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view2"
        android:layout_width="387dp"
        android:layout_height="87dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="11dp"
        android:layout_marginLeft="10dp"
        app:cardElevation="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_popular"
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:shapeAppearance="@drawable/food_image_shape"
            tools:srcCompat="@tools:sample/avatars"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_food_name_popular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food Name"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="17dp"
            app:layout_constraintLeft_toRightOf="@+id/img_popular"
            app:layout_constraintTop_toTopOf="@id/img_popular"
            app:layout_constraintBottom_toBottomOf="@+id/img_popular"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/abhaya_libre"/>

            <TextView
                android:id="@+id/tv_food_price_popular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="190dp"
                android:layout_marginTop="16dp"
                android:text="Rs. 5"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@+id/img_popular"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:fontFamily="@font/abhaya_libre"/>

        <TextView
            android:id="@+id/tv_addtocart_popular"
            android:layout_width="82.5dp"
            android:layout_height="22dp"
            android:text="Add to cart"
            app:layout_constraintTop_toBottomOf="@id/tv_food_price_popular"
            app:layout_constraintRight_toRightOf="@+id/tv_food_price_popular"
            app:layout_constraintLeft_toLeftOf="@id/tv_food_price_popular"
            android:layout_marginTop="16dp"
            android:background="@drawable/addtocartshape"
            android:gravity="center"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:elevation="2dp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>