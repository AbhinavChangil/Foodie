<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity"
    android:background="@drawable/background_gradient2">

    <ImageView
        android:id="@+id/burrgar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/burrgar"
        android:layout_marginTop="100dp"/>

    <TextView
        android:id="@+id/tv_start_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/akaya_telivigala"
        android:text="Enjoy quality meal \n at your home!"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="35dp"
        app:layout_constraintEnd_toEndOf="@id/burrgar"
        app:layout_constraintStart_toStartOf="@id/burrgar"
        app:layout_constraintTop_toBottomOf="@+id/burrgar" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/dark_green_logo"
        android:fontFamily="@font/amethysta"
        android:text="Next"
        android:textSize="25dp"
        android:shadowColor="#FF095017"
        android:shadowRadius="0.2"
        android:shadowDx="-4"
        android:shadowDy="2"
        app:layout_constraintEnd_toEndOf="@id/tv_start_activity"
        app:layout_constraintStart_toStartOf="@id/tv_start_activity"
        app:layout_constraintTop_toBottomOf="@+id/tv_start_activity" />

    <TextView
        android:id="@+id/tv_start_activity2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="135dp"
        android:fontFamily="@font/akaya_telivigala"
        android:text="Designed by Abhinav Changil ðŸ˜Ž"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@id/burrgar"
        app:layout_constraintStart_toStartOf="@id/burrgar"
        app:layout_constraintTop_toBottomOf="@+id/btn_next"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>